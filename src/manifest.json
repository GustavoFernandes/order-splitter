{
  "manifest_version": 2,

  "name": "Order Splitter",
  "description": "This extension processes orders from orderup",
  "version": "0.5.2",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://orderup.com/orders/*"],
      "js": ["./contentScript.js"]
    },
    {
      "matches": ["*://orderup.com/orders/*"],
      "js": ["./order.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["./order.js"],
  "permissions": [
    "activeTab"
  ]
}
