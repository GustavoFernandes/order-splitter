{
  "manifest_version": 2,

  "name": "Order Splitter",
  "description": "This extension processes orders from orderup",
  "version": "0.5.2",
  "browser_action": {
    "default_popup": "chrome-extension-index.html"
  },
  "icons": {
    "16":  "./common/app-icon/ordersplitter16.png",
    "32":  "./common/app-icon/ordersplitter32.png",
    "128": "./common/app-icon/ordersplitter128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://orderup.com/orders/*"],
      "js": ["./contentScript.js"]
    },
    {
      "matches": ["*://orderup.com/orders/*"],
      "js": ["./common/order.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["./common/order.js"],
  "permissions": [
    "activeTab"
  ]
}
